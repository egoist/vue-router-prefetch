{
  "name": "vue-router-prefetch",
  "version": "0.0.0",
  "description": "Prefetch the route components of router-link in viewport.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npm run lint",
    "lint": "xo",
    "build": "bili --js buble --format es --filename index.js",
    "prepublishOnly": "npm run build",
    "example": "poi example/index.js --serve --jsx vue",
    "commit": "git-cz"
  },
  "repository": {
    "url": "egoist/vue-router-prefetch",
    "type": "git"
  },
  "author": "egoist<0x142857@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "bili": "^3.4.2",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-rem": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-vue": "^5.1.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "poi": "^12.4.6",
    "prettier": "^1.15.2",
    "semantic-release": "^15.13.3",
    "vue": "^2.5.22",
    "vue-router": "^3.0.2",
    "vue-template-compiler": "^2.5.22",
    "xo": "^0.23.0"
  },
  "xo": {
    "extends": [
      "rem",
      "plugin:vue/recommended",
      "plugin:prettier/recommended"
    ],
    "envs": [
      "browser"
    ],
    "rules": {
      "no-new": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "branch": "master"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
